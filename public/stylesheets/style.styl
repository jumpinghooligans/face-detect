*
	box-sizing border-box

body
	padding 0
	margin 0
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
	color #00B7FF

h1,h2,h3,h4,h5
	margin 1em 0
	padding 0

#container
	width 800px
	margin 10px auto
	padding 25px
	box-shadow 0 0 10px #ccc

	overflow auto

#nav
	a
		display inline-block
		padding 0 1em

#response
	background-color #eee
	border 1px solid #555
	padding 1em
	margin 1em 0

#images 
	overflow auto
	position relative

	#snap
		position absolute
		width 100%
		text-align center
		bottom 100px

		a
			display inline-block
			background-color #00B7FF
			color white
			padding 10px
			text-decoration none

			&:hover
				text-decoration underline

	#preview
		float right
		height 240px
		width 320px
		background-color #eee